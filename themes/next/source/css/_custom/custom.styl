// Custom styles.

// Music Panel
#musicPanel {
	position: relative;
	z-index: 10000;
	#musicControl {
		box-sizing: border-box;
		position: fixed;
		bottom: 40px;
		right: 24px;
		z-index: 1050;
		padding: 0 6px;
		width: 25px;
		background: #222;
		font-size: 12px;
		opacity: 0.6;
		color: #fff;
		cursor: pointer;
		text-align: center;
		background-color: #222;
		-webkit-transition: 1sec;
		transition: 1sec;
		transform: translateZ(0);
		-webkit-transform: translateZ(0);
		&.on {
			&+.music-content {
				display: block;
			}
		}
	}
	.music-content {
		display: none;
		position: fixed;
		bottom: 65px;
		right: 0;
	}
}
